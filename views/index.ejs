<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>XYR</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <style>
      html,
body,
.intro {
  height: 100%;
}

table td,
table th {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.btn-outline-success {
  width: 190px;
}

    </style>
  </head>

  <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">XYR SPACE</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/addnew">新建Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/authors">作者</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/addauthor">新增作者</a>
          </li>
        </ul>
      </div>
    </div>
    <div>
      <!-- <form class="d-flex" action="/search" method="GET">
        <input class="form-control me-2" type="search" placeholder="请输入文章标题" aria-label="Search" name="title">
        <button class="btn btn-outline-success" type="submit">搜索</button>
      </form> -->

      <form class="d-flex" method="GET" action="/search">
        <input class="form-control me-2" placeholder="请输入文章标题" type="text" name="title" id="title">
      
        <input class="form-control me-2" placeholder="请输入文章类型" type="text" name="category" id="category">
      
        <input class="form-control me-2" placeholder="请输入文章作者" type="text" name="author" id="author">
      
        <button class="btn btn-outline-success" type="submit">搜索</button>
      </form>
      
    </div>
  </nav>

   <section class="intro">
    <div class="bg-image h-100" style="background-image: url('https://mdbootstrap.com/img/Photos/new-templates/tables/img2.jpg');">
      <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0,0,0,.25);">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="card bg-dark shadow-2-strong">
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-dark table-borderless mb-0">
                      <thead>
      <tr>
        <th scope="col">标题</th>
        <th scope="col">内容</th>
        <th scope="col">类型</th>
        <th scope="col">作者</th>
        <th scope="col">Likes</th>
        <th scope="col">操作</th>
      </tr>
                      </thead>
    <tbody>
      <%console.log(bdata)%>
      <% for (let d of bdata) {%>
      <tr>
        <td><%=d.title %></td>
        <td><%=d.content %></td>
        <td><%=d.blog_cat %></td>
        <td><%=d.authorName %></td>
        <td><%=d.likes %></td>
        <td>
          <a href="/edit/<%=d.id%>/editForm" class="btn btn-primary">编辑</a>
          <a href="/deleteblog/<%=d.id%>" class="btn btn-danger">删除</a>
      </tr>
      <% } %>
    </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
